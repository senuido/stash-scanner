{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
		"itemmods": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"match_min": {
					"id": "/match_min",
					"minimum": 0,
					"type": "integer"
				},
				"match_max": {
					"id": "/match_max",
					"minimum": 0,
					"type": "integer"
				},
				"mods": {
					"id": "/mods",
					"items": {
						"id": "/mods",
						"properties": {
							"expr": {
								"id": "/mods/expr",
								"type": "string"
							},
							"values": {
								"id": "/mods/values",
								"items": {
									"id": "/mods/values",
									"type": "number"
								},
								"type": "array"
							},
							"required": {
								"id": "/mods/required",
								"type": "boolean"
							}
						},
						"required": [ "expr" ],
						"type": "object",
						"additionalProperties": false
					},
					"type": "array",
					"minItems": 1
				}
			}
		}
	},
    "id": "filters",
    "items": {
        "properties": {
            "criteria": {
                "properties": {
                    "buyout": {
                        "id": "/criteria/buyout",
                        "type": "boolean"
                    },
                    "corrupted": {
                        "id": "/criteria/corrupted",
                        "type": "boolean"
                    },
					"unmodifiable": {
                        "id": "/criteria/unmodifiable",
                        "type": "boolean"
                    },
                    "crafted": {
                        "id": "/criteria/crafted",
                        "type": "boolean"
                    },
                    "ilvl": {
                        "id": "/criteria/ilvl",
                        "minimum": 0,
                        "type": "number"
                    },
                    "links": {
                        "id": "/criteria/links",
                        "maximum": 6,
                        "minimum": 0,
                        "type": "integer"
                    },
                    "modcount_min": {
                        "id": "/criteria/modcount_min",
                        "minimum": 1,
                        "type": "integer"
                    },
					"modcount_max": {
                        "id": "/criteria/modcount_max",
                        "minimum": 1,
                        "type": "integer"
                    },
					"base": {
                        "id": "/criteria/base",
                        "type": "string"
                    },
                    "name": {
                        "id": "/criteria/name",
                        "items": {
                            "id": "/criteria/name",
                            "type": "string"
                        },
                        "type": "array",
						"minItems": 1
                    },
                    "price": {
                        "id": "/criteria/price",
                        "type": "string"
                    },
                    "sockets": {
                        "id": "/criteria/sockets",
                        "maximum": 6,
                        "minimum": 0,
                        "type": "integer"
                    },
                    "stacksize": {
                        "id": "/criteria/stacksize",
                        "minimum": 1,
                        "type": "integer"
                    },
                    "type": {
                        "id": "/criteria/type",
                        "items": {
                            "id": "/criteria/type",
                            "type": "string",
							"enum": ["normal", "magic", "rare", "unique", "gem", "currency", "divination card", "quest item", "prophecy", "relic"]
                        },
                        "type": "array",
						"minItems": 1
                    },
					"implicit": { "$ref": "#/definitions/itemmods" },
					"explicit": { "$ref": "#/definitions/itemmods" },
					"mods": { "$ref": "#/definitions/itemmods" },
					"level": {
                        "id": "/criteria/level",
                        "minimum": 0,
                        "type": "number"
                    },
					"level_max": {
                        "id": "/criteria/level_max",
                        "minimum": 0,
                        "type": "number"
                    },
					"exp": {
                        "id": "/criteria/exp",
                        "minimum": 0,
						"maximum": 100,
                        "type": "number"
                    },					
					"quality": {
                        "id": "/criteria/quality",
                        "minimum": 0,
                        "type": "integer"
                    },
					"es": {
                        "id": "/criteria/es",
                        "minimum": 0,
                        "type": "number"
                    },
					"armour": {
                        "id": "/criteria/armour",
                        "minimum": 0,
                        "type": "number"
                    },
					"evasion": {
                        "id": "/criteria/evasion",
                        "minimum": 0,
                        "type": "number"
                    },
					"total_life": {
                        "id": "/criteria/total_life",
                        "type": "number"
                    },
					"fres": {
                        "id": "/criteria/fres",
                        "type": "number"
                    },
					"cres": {
                        "id": "/criteria/cres",
                        "type": "number"
                    },
					"lres": {
                        "id": "/criteria/lres",
                        "type": "number"
                    },
					"chres": {
                        "id": "/criteria/chres",
                        "type": "number"
                    },
					"ele_res": {
                        "id": "/criteria/ele_res",
                        "type": "number"
                    },
					"total_res": {
                        "id": "/criteria/total_res",
                        "type": "number"
                    },
					"edps": {
                        "id": "/criteria/epds",
                        "minimum": 0,
                        "type": "number"
                    },
					"pdps": {
                        "id": "/criteria/pdps",
                        "minimum": 0,
                        "type": "number"
                    },
					"dps": {
                        "id": "/criteria/dps",
                        "minimum": 0,
                        "type": "number"
                    }
                },
                "type": "object",
				"additionalProperties": false
            },
            "enabled": {
                "id": "/enabled",
                "type": "boolean"
            },
            "title": {
                "id": "/title",
                "type": "string"
            },
			"id": {
                "id": "/id",
                "type": "string"
            },
			"baseid": {
                "id": "/baseid",
                "type": "string"
            }
        },
        "required": [
            "criteria",
            "title"
        ],
        "type": "object"
    },
    "type": "array"
}